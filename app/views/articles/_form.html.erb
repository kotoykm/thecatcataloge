<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row d-flex justify-content-center mt-4">
    <div class="col-8">
      <div class="mb-3">
        <%= form.label :title, "Título", style: "display: block", class:"fw-bold mb-2" %>
        <%= form.text_field :title, class:"form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :picture, "Imagen adjunta", style: "display: block", class:"fw-bold mb-2" %>
        <%= form.text_field :picture, class:"form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :description, "Descripción de la foto", style: "display: block", class:"fw-bold mb-2" %>
        <%= form.text_area :description, size: "120x4", class:"form-control" %>
      </div>
      <div class="d-flex justify-content-end">
        <%= form.submit "Subir noticia", class:"btn mybtn fw-bold" %>
      </div>
    </div>
  </div>
<% end %>
