<p style="color: green"><%= notice %></p>

<%= render @article %>
<%= render 'opinions/form' %>

<% @opinions.each do |opinion| %>
  <div class="mb-3"><%= render partial: "opinions/opinion", locals: { opinion: opinion } %></div>
<% end %>
<div>
  <%= link_to "Edit this article", edit_article_path(@article) %> |
  <%= link_to "Back to articles", articles_path %>

  <%= button_to "Destroy this article", @article, method: :delete %>

  <% Article::Kinds.each do |kind| %>
    <%= button_to "#{Article::KindsSpanish[kind]}", new_client_reaction_path(reaction: { article_id: @article.id, kind: kind }), method: :post, class: "btn mybtn" %>
  <% end %>


</div>
