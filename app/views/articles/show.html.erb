<p style="color: green"><%= notice %></p>

<%= render @article %>
<%= render 'opinions/form' %>

<% @opinions.each do |opinion| %>
  <div class="mb-3"><%= render partial: "opinions/opinion", locals: { opinion: opinion } %></div>
<% end %>
<div>
  <%= link_to "Edit this article", edit_article_path(@article) %> |
  <%= link_to "Back to articles", articles_path %>

  <%= button_to "Destroy this article", @article, method: :delete %>

  <% emojis = ["&#128571;", "&#128008;", "&#128574;"] %>
  <% Article::Kinds.zip(emojis).each do |kind, emoji| %>
    <%= button_to "#{emoji} #{Article::KindsSpanish[kind]}".html_safe, new_client_reaction_path(reaction: { article_id: @article.id, kind: kind }), method: :post, class: "btn btn-outline-dark" %>
  <% end %>

</div>
