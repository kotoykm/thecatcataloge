<div id="<%= dom_id article %>">

  <div class="row">
    <div class="col-12">
      <p class="fw-bold display-4 mb-5 text-center">
        <%= article.title %>
      </p>
      <p>
        <%= image_tag article.picture, class: "w-100 ps-5" %>
      </p>
      <p class="fs-5 text-center mt-5">
        <%= article.description %>
      </p>
      <p class="text-center">
        <span class="fw-bold">Por:</span>
        <span class="fst-italic"><%= article.client.name %></span>
      </p>

    </div>
  </div>

</div>
